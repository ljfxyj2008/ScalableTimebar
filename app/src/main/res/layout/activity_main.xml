<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljfxyj2008.scalabletimebarDemo.MainActivity">



    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/timebar_zoom_out_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:src="@drawable/selector_timebar_zoom_out_img" />
        <TextView
            android:id="@+id/current_time_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="12:00:00"
            android:shadowColor="@color/colorBlack"
            android:shadowRadius="5"
            android:shadowDx="0"
            android:shadowDy="0" />
        <ImageView
            android:id="@+id/timebar_zoom_in_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:src="@drawable/selector_timebar_zoom_in_img" />


    </LinearLayout>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ljfxyj2008.scaletimebar.ScalableTimebarView
            android:id="@+id/my_timebar_view"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="#cd000000"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </FrameLayout>


</RelativeLayout>
